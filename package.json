{
  "name": "lambda-durable-execution-demo",
  "version": "1.2.1",
  "description": "Lambda durable execution demo",
  "scripts": {
    "deploy:dev": "cross-env NODE_ENV=development npx serverless deploy --stage dev --aws-profile vimson",
    "deploy": "cross-env NODE_ENV=production npx serverless deploy --stage prod",
    "remove": "cross-env NODE_ENV=production npx serverless remove --stage prod",
    "clean": "rimraf dist .esbuild .serverless",
    "lint": "eslint .",
    "format": "eslint --fix . && prettier '**/*.{json,yaml}' --write --ignore-path .gitignore",
    "check-types": "tsc --noEmit --pretty",
    "commit": "cz",
    "test": "jest",
    "prepare": "husky"
  },
  "dependencies": {
    "@aws-lambda-powertools/logger": "^2.30.0",
    "@aws-sdk/client-dynamodb": "^3.700.0",
    "@aws-sdk/client-lambda": "^3.958.0",
    "@aws-sdk/client-ses": "^3.958.0",
    "@aws-sdk/client-textract": "^3.700.0",
    "@aws-sdk/lib-dynamodb": "^3.700.0",
    "@aws/durable-execution-sdk-js": "^1.0.1",
    "@middy/core": "^6.4.5",
    "@middy/http-json-body-parser": "^6.4.5",
    "dayjs": "^1.11.19",
    "dynamodb-toolbox": "^2.7.4",
    "ulid": "^3.0.2"
  },
  "devDependencies": {
    "@commitlint/cli": "^19.2.1",
    "@commitlint/config-conventional": "^19.1.0",
    "@commitlint/cz-commitlint": "^19.2.0",
    "@semantic-release/changelog": "^6.0.3",
    "@semantic-release/git": "^10.0.1",
    "@swc/core": "^1.4.8",
    "@swc/jest": "^0.2.36",
    "@types/aws-lambda": "^8.10.159",
    "@types/jest": "^29.5.12",
    "@typescript-eslint/eslint-plugin": "^7.3.1",
    "@typescript-eslint/parser": "^7.3.1",
    "commitizen": "^4.3.0",
    "cross-env": "^7.0.3",
    "dotenv": "^17.2.3",
    "dotenv-cli": "^7.4.1",
    "eslint": "^8.57.0",
    "eslint-config-prettier": "^9.1.0",
    "eslint-plugin-import": "^2.32.0",
    "eslint-plugin-jest": "^27.9.0",
    "eslint-plugin-jest-formatting": "^3.1.0",
    "eslint-plugin-prettier": "^5.1.3",
    "eslint-plugin-simple-import-sort": "^12.0.0",
    "eslint-plugin-unused-imports": "^3.1.0",
    "husky": "^9.0.11",
    "jest": "^29.7.0",
    "lint-staged": "^15.2.2",
    "prettier": "^3.2.5",
    "rimraf": "^5.0.5",
    "semantic-release": "^23.1.1",
    "serverless": "^4.29.0",
    "tsconfig-paths": "^4.2.0",
    "tsx": "^4.7.1",
    "typescript": "^5.4.3"
  },
  "config": {
    "commitizen": {
      "path": "@commitlint/cz-commitlint"
    }
  },
  "release": {
    "branches": [
      "main"
    ],
    "plugins": [
      "@semantic-release/commit-analyzer",
      "@semantic-release/release-notes-generator",
      "@semantic-release/changelog",
      [
        "@semantic-release/npm",
        {
          "npmPublish": false
        }
      ],
      "@semantic-release/git",
      "@semantic-release/github"
    ]
  },
  "author": "Vimson Varghese (https://github.com/vimson)"
}
